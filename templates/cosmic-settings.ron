        neutral_2: {{ self::format(color=overlay) }},
        neutral_3: {{ self::format(color=highlight_low) }},
        neutral_4: {{ self::format(color=highlight_med) }},
        neutral_5: {{ self::format(color=highlight_high) }},
        neutral_6: {{ self::format(color=highlight_low) }},
        neutral_7: {{ self::format(color=highlight_med) }},
        neutral_8: {{ self::format(color=highlight_high) }},
        neutral_9: {{ self::format(color=base) }},
        neutral_10: {{ self::format(color=surface) }},
        bright_green: {{ self::format(color=foam) }},
        bright_red: {{ self::format(color=love) }},
        bright_orange: {{ self::format(color=rose) }},
        ext_warm_grey: {{ self::format(color=muted) }},
        ext_orange: {{ self::format(color=rose) }},
        ext_yellow: {{ self::format(color=gold) }},
        ext_blue: {{ self::format(color=pine) }},
        ext_purple: {{ self::format(color=iris) }},
