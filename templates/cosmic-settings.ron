{%- macro format(color) -%}
        (
            red: {{ color.rgb.r / 255 | trunc(places=8) }},
            green: {{ color.rgb.g / 255 | trunc(places=8) }},
            blue: {{ color.rgb.b / 255 | trunc(places=8) }},
            alpha: 1.0,
        )
{%- endmacro format -%}

{%- macro format_optional(color, alpha=1.0) -%}
    Some((
        red: {{ color.rgb.r / 255 | trunc(places=8) }},
        green: {{ color.rgb.g / 255 | trunc(places=8) }},
        blue: {{ color.rgb.b / 255 | trunc(places=8) }},
        alpha: {{ alpha }},
    ))
{%- endmacro format_optional -%}

(
    palette: {{ kind | capitalize }}((
        name: "{{ name }}",
        blue: {{ self::format(color=foam) }},
        red: {{ self::format(color=love) }},
        green: {{ self::format(color=pine) }},
        yellow: {{ self::format(color=gold) }},
        gray_1: {{ self::format(color=highlight_low) }},
        gray_2: {{ self::format(color=highlight_med) }},
        gray_3: {{ self::format(color=highlight_high) }},
        neutral_0: {{ self::format(color=base) }},
